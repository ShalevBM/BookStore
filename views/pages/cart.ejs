<div class="cart-header">
    <h2>🛒 עגלת קניות</h2>
    <a href="/" class="btn back-btn">← חזור לספרים</a>
</div>

<% if (error) { %>
    <p class="error"><%= error %></p>
<% } %>

<% if (cart && cart.items && cart.items.length > 0) { %>
    <div class="cart-container">
        <% let total = 0; %>
        <% cart.items.forEach(item => { %>
            <div class="cart-item">
                <div class="item-info">
                    <h3><%= item.book.title %></h3>
                    <p><strong>מחבר:</strong> <%= item.book.author %></p>
                    <p><strong>מחיר ליחידה:</strong> ₪<%= item.book.price %></p>
                </div>
                
                <div class="item-controls">
                    <div class="quantity-control">
                        <label>כמות:</label>
                        <input type="number" 
                               value="<%= item.quantity %>" 
                               min="1" 
                               max="10" 
                               class="quantity-input"
                               onchange="updateQuantity('<%= item.book._id %>', this.value)">
                    </div>
                    
                    <div class="item-total">
                        <strong>סה"כ: ₪<%= (item.book.price * item.quantity).toFixed(2) %></strong>
                    </div>
                    
                    <button onclick="removeFromCart('<%= item.book._id %>')" class="btn remove-btn">🗑️ הסר</button>
                </div>
            </div>
            <% total += item.book.price * item.quantity; %>
        <% }) %>
        
        <div class="cart-summary">
            <h3>סיכום הזמנה</h3>
            <p><strong>סה"כ לתשלום:</strong> ₪<%= total.toFixed(2) %></p>
            <button class="btn checkout-btn">💳 המשך לתשלום</button>
        </div>
    </div>
<% } else { %>
    <div class="empty-cart">
        <p>העגלה ריקה</p>
        <a href="/" class="btn">← חזור לספרים</a>
    </div>
<% } %>

<script>
async function updateQuantity(bookId, quantity) {
    try {
        const response = await fetch(`/cart/quantity/${bookId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ quantity })
        });
        
        const result = await response.json();
        
        if (result.success) {
            location.reload(); // רענון הדף לעדכון הסכומים
        } else {
            alert('שגיאה: ' + result.error);
        }
    } catch (error) {
        alert('שגיאה בעדכון הכמות');
    }
}

async function removeFromCart(bookId) {
    if (!confirm('האם אתה בטוח שברצונך להסיר את הספר מהעגלה?')) {
        return;
    }
    
    try {
        const response = await fetch(`/cart/remove/${bookId}`, {
            method: 'DELETE'
        });
        
        const result = await response.json();
        
        if (result.success) {
            location.reload();
        } else {
            alert('שגיאה: ' + result.error);
        }
    } catch (error) {
        alert('שגיאה בהסרת הספר מהעגלה');
    }
}
</script> 