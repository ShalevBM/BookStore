<div class="books-header">
    <h2>📚 כל הספרים</h2>
    <div class="header-actions">
        <a href="/books/new" class="btn add-btn">➕ הוסף ספר חדש</a>
        <a href="/cart" class="btn cart-btn">🛒 עגלת קניות</a>
    </div>
</div>

<% if (error) { %>
    <p class="error"><%= error %></p>
<% } %>

<div class="books-container">
    <% books.forEach(book => { %>
        <div class="book-card">
            <h3 class="book-title"><%= book.title %></h3>
            <p><strong>✍️ מחבר:</strong> <%= book.author %></p>
            <p><strong>💰 מחיר:</strong> ₪<%= book.price %></p>
            <% if (book.description) { %>
                <p><strong>📝 תיאור:</strong> <%= book.description %></p>
            <% } %>
            <% if (book.category) { %>
                <p><strong>📂 קטגוריה:</strong> <%= book.category %></p>
            <% } %>

            <div class="book-actions">
                <div class="cart-controls">
                    <label for="quantity-<%= book._id %>">כמות:</label>
                    <input type="number" id="quantity-<%= book._id %>" value="1" min="1" max="10" class="quantity-input">
                    <button onclick="addToCart('<%= book._id %>', '<%= book.title %>', <%= book.price %>)" class="btn add-to-cart-btn">🛒 הוסף לעגלה</button>
                </div>
                
                <div class="admin-actions">
                    <a href="/books/<%= book._id %>/edit" class="btn edit-btn">✏️ עריכה</a>
                    <form action="/books/<%= book._id %>?_method=DELETE" method="POST" onsubmit="return confirm('למחוק את הספר?')">
                        <button type="submit" class="btn delete-btn">🗑️ מחק</button>
                    </form>
                </div>
            </div>
        </div>
    <% }) %>
</div>

<script>
async function addToCart(bookId, bookTitle, bookPrice) {
    const quantity = document.getElementById(`quantity-${bookId}`).value;
    
    try {
        const response = await fetch('/cart/add', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ 
                bookId, 
                quantity,
                bookTitle,
                bookPrice
            })
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert('הספר נוסף לעגלה בהצלחה!');
        } else {
            alert('שגיאה: ' + result.error);
        }
    } catch (error) {
        alert('שגיאה בהוספת הספר לעגלה');
    }
}
</script>
